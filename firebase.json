{
  "hosting": {
    "site": "pipescore",
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/pipescore/**/**",
        "destination": "/pipescore.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(html|css|js|png|jpeg|svg|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(wav|mp3)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  }
}

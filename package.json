{
  "name": "PipeScore",
  "version": "0.4.0",
  "description": "A web-based bagpipe notation app.",
  "main": "PipeScore.ts",
  "scripts": {
    "deploy": "firebase deploy",
    "test": "echo 'Run `npm run lint` and `npm run circles` to test'",
    "dev": "firebase serve",
    "watch": "parcel watch src/PipeScore.ts --out-dir public/dist",
    "build": "rm public/dist/* && rollup -c",
    "lint": "eslint src --ext .ts",
    "circles": "madge -c --warning src/PipeScore.ts"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "firebase-tools": "^9.3.0",
    "madge": "^4.0.0",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "parcel-bundler": "^1.12.4"
  }
}

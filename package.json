{
  "name": "pipescore",
  "version": "0.5.0",
  "description": "A web-based bagpipe notation app.",
  "scripts": {
    "deploy": "firebase deploy",
    "test": "echo 'Run `npm run lint` and `npm run circles` to test'",
    "dev": "firebase serve",
    "watch": "esbuild src/PipeScore/PipeScore.ts src/Login/login.ts src/Scores/scores.ts --bundle --watch --outdir=public/dist",
    "build": "rm -r public/dist/*; esbuild src/PipeScore/PipeScore.ts src/Login/login.ts src/Scores/scores.ts --bundle --minify --outdir=public/dist; ./scripts/buildall.sh",
    "lint": "prettier --write .; eslint src --ext .ts",
    "circles": "madge -c --warning src/PipeScore/PipeScore.ts"
  },
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "esbuild": "^0.9.0",
    "eslint": "^7.18.0",
    "firebase-auth-lite": "^0.8.8",
    "firebase-firestore-lite": "^1.0.3",
    "firebase-tools": "^9.3.0",
    "madge": "^4.0.0",
    "prettier": "^2.3.2",
    "typescript": "^4.1.3"
  }
}
